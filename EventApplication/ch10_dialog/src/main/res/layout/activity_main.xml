<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 1. 본화면 -->
    <LinearLayout

        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        tools:context=".MainActivity">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="날짜 선택"
            android:id="@+id/btnDate" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간 선택"
            android:id="@+id/btnTime" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림창"
            android:id="@+id/btnAlert" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림창 - 아이템"
            android:id="@+id/btnAlertItem" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림창 - 하나만 선택"
            android:id="@+id/btnAlertSingle" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림창 - 다수선택"
            android:id="@+id/btnAlertMulti" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림창 - 사용자"
            android:id="@+id/btnAlertCustom" />

    </LinearLayout>

    <!-- 2. 드로어(background) 화면 -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#ff0000"
        android:layout_gravity="start"
        android:gravity="center"
        android:fitsSystemWindows="true"
        android:text="I am Drawer"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        />

</androidx.drawerlayout.widget.DrawerLayout>
